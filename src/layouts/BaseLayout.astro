---
import '../styles/global.css';
import Atmosphere from '../components/Atmosphere';
import ThemeToggle from '../components/ThemeToggle';
import Constellation from '../components/Constellation.astro';
import CornerFlourish from '../components/CornerFlourish.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = "Alex Wilson", description = "I think the meaning of life is to love and to be lovedâ€”and I'm curious about how to do both better." } = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site || 'https://awlego.com');

// Helper to check if a nav link is active (consistent logic)
function isActive(path: string): boolean {
  return currentPath.startsWith(path);
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.png', Astro.site || 'https://awlego.com')} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/og-image.png', Astro.site || 'https://awlego.com')} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500&family=Source+Sans+3:wght@400;500&display=swap" rel="stylesheet" />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (saved === 'night' || (!saved && prefersDark)) {
          document.documentElement.setAttribute('data-theme', 'night');
        }
      })();
    </script>
  </head>
  <body>
    <!-- Atmospheric background effects -->
    <Atmosphere client:load />

    <div class="container">
      <!-- Navigation -->
      <nav class="nav">
        <a href="/" class="nav__brand">
          Alex
          <Constellation season="auto" size={28} />
        </a>

        <div class="nav__links">
          <div class="nav__menu">
            <a href="/writing" class:list={[{ active: isActive('/writing') }]} aria-current={isActive('/writing') ? 'page' : undefined}>Writing</a>
            <a href="/decibel" class:list={[{ active: isActive('/decibel') }]} aria-current={isActive('/decibel') ? 'page' : undefined}>Decibel</a>
            <a href="/about" class:list={[{ active: isActive('/about') }]} aria-current={isActive('/about') ? 'page' : undefined}>About</a>
            <a href="/now" class:list={[{ active: isActive('/now') }]} aria-current={isActive('/now') ? 'page' : undefined}>Now</a>
          </div>

          <ThemeToggle client:load />
        </div>
      </nav>

      <!-- Main content -->
      <main>
        <slot />
      </main>

      <!-- Footer -->
      <footer class="footer">
        <span>&copy; {new Date().getFullYear()}</span>
      </footer>
    </div>

    <!-- Corner flourish decoration -->
    <CornerFlourish position="bottom-right" />

  </body>
</html>
